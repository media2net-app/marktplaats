generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  Product[]
}

model Category {
  id        String   @id @default(cuid())
  name      String
  level     Int      // 1 = hoofdcategorie, 2 = subcategorie, 3 = sub-subcategorie
  parentId  String?
  parent    Category? @relation("CategoryTree", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryTree")
  path      String   // Volledige pad zoals "Huis en Inrichting > Banken"
  marktplaatsId String? // ID zoals gebruikt door Marktplaats
  fields    Json?    // Marktplaats categorie-specifieke velden (definitie)
  ebayCategoryId String? // eBay category ID
  ebayFields Json?   // eBay categorie-specifieke velden (Item Specifics definitie)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  Product[]
}

model Product {
  id            String   @id @default(cuid())
  title         String
  description   String
  price         Float
  articleNumber String   @unique
  condition     String?
  material      String?
  thickness     String?
  totalSurface  String?
  deliveryOption String?
  location      String?
  manufacturerName String? // Handelsnaam fabrikant
  manufacturerAddress String? // Postadres fabrikant
  manufacturerEmail String? // E-mailadres fabrikant
  status        String   @default("pending") // pending, processing, completed, failed
  marktplaatsUrl String?
  marktplaatsAdId String? // Advertentienummer (bijv. a1519860984)
  ebayItemId    String?  // eBay item ID
  ebayListingId String?  // eBay listing ID
  views         Int      @default(0) // Aantal keer bekeken
  saves         Int      @default(0) // Aantal keer opgeslagen
  postedAt      DateTime? // Datum waarop geplaatst op Marktplaats
  ebayPostedAt  DateTime? // Datum waarop geplaatst op eBay
  categoryId    String?
  category      Category? @relation(fields: [categoryId], references: [id])
  categoryFields Json?   // Marktplaats categorie-specifieke velden (waarden)
  ebayFields    Json?    // eBay categorie-specifieke velden (Item Specifics waarden)
  platforms     String[] @default(["marktplaats"]) // Array van platforms: ["marktplaats", "ebay"]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}

