# Playwright persistent context directory (keeps you logged in)
USER_DATA_DIR=./user_data

# Base URL for Marktplaats
MARKTPLAATS_BASE_URL=https://www.marktplaats.nl

# Root folder for product photos (expects subfolders per article_number)
MEDIA_ROOT=./public/media

# Optional: slow down actions for stability (in ms)
ACTION_DELAY_MS=200

# API Configuration (voor batch processing)
# Deze moet overeenkomen met INTERNAL_API_KEY in webapp/.env.local
NEXTAUTH_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000
INTERNAL_API_KEY=internal-key-change-in-production
